{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@opentelemetry/api": ["./src/opentelemetry-js-api"],
      "@opentelemetry/*": [
        "./src/opentelemetry-js/packages/opentelemetry-*",
        "./src/opentelemetry-js/experimental/packages/opentelemetry-*",
        "./src/opentelemetry-js-contrib/plugins/web/opentelemetry-*"
      ]
    }
  }
}
